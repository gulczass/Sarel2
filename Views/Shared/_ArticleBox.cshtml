@model Article

<div class="article-container flex mb-6">
    <div class="article-image w-1/4 mr-4">
        <img src="@Model.ImageUrl" alt="@Model.Title" class="w-full h-auto rounded-lg shadow-lg">
    </div>
    <div class="article-content w-3/4">
        <h2 class="article-title text-xl font-bold mb-2">@Model.Title</h2>
        <p class="article-text text-sm mb-4">@Model.Text</p>
        <a href="@Url.Action("Details", "Articles", new { id = Model.Id })" class="text-blue-500 hover:text-blue-700">Read More</a>
    </div>
</div>
